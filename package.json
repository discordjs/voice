{
	"name": "@discordjs/voice",
	"version": "0.0.1-alpha",
	"description": "audio streaming capability for discord.js",
	"main": "dist/index.js",
	"author": "Amish Shah <amishshah.2k@gmail.com>",
	"license": "MIT",
	"directories": {
		"test": "test"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"prettier": "prettier --write **/*.{ts,js,json,yml,yaml}",
		"build": "tsc && idtsc",
		"build:check": "tsc --noEmit --incremental false && idtsc",
		"docs": "typedoc --theme ./node_modules/typedoc-neo-theme/bin/default --excludeInternal --excludePrivate --includeVersion src/index.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/discordjs/voice.git"
	},
	"keywords": [
		"discord",
		"discord.js",
		"audio",
		"voice",
		"streaming"
	],
	"bugs": {
		"url": "https://github.com/discordjs/voice/issues"
	},
	"homepage": "https://github.com/discordjs/voice#readme",
	"files": [
		"dist/*"
	],
	"dependencies": {
		"prism-media": "^1.2.5",
		"ws": "^7.4.3"
	},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-angular": "^11.0.0",
		"@types/node": "^14.14.25",
		"@types/ws": "^7.4.0",
		"@typescript-eslint/eslint-plugin": "^4.14.2",
		"@typescript-eslint/parser": "^4.14.2",
		"discord-api-types": "^0.12.1",
		"discord.js": "^12.5.1",
		"eslint": "^7.19.0",
		"eslint-config-marine": "^8.1.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^4.3.8",
		"idtsc": "^0.9.0",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"tiny-typed-emitter": "^2.0.3",
		"typedoc": "^0.20.24",
		"typedoc-neo-theme": "^1.1.0",
		"typescript": "^4.2.0-dev.20210204"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.{mjs,js,ts}": [
			"eslint --ext .ts --fix"
		],
		"*.{json,yml,yaml}": [
			"prettier --write"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test",
					"types",
					"wip"
				]
			],
			"scope-case": [
				1,
				"always",
				"pascal-case"
			]
		}
	}
}
